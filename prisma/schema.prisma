generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  teams     Team[]
}

model Team {
  id             String       @id @default(uuid())
  name           String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  developers     Developer[]
  discordChannel String?
}

model Developer {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique
  role            String    @default("developer")
  teamId          String
  team            Team      @relation(fields: [teamId], references: [id])
  discordUserId   String?
  assignedTasks   Task[]    @relation("assignee")
  checkIns        CheckIn[]
  reportedBlockers Blocker[] @relation("reportedBy")
  assignedBlockers Blocker[] @relation("assignedTo")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      String   @default("active")
  startDate   DateTime @default(now())
  targetDate  DateTime?
  createdAt   DateTime @default(now())
  tasks       Task[]
}

model Task {
  id           String   @id @default(uuid())
  name         String
  description  String?
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id])
  assigneeId   String?
  assignee     Developer? @relation("assignee", fields: [assigneeId], references: [id])
  status       String   @default("not_started")
  duration     Int      @default(1)
  progress     Int      @default(0)
  priority     String   @default("medium")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  dependsOn    TaskDependency[] @relation("dependent")
  dependedBy   TaskDependency[] @relation("dependency")
  blockers     Blocker[]
  checkInItems CheckInItem[]
}

model TaskDependency {
  id           String @id @default(uuid())
  dependentId  String
  dependencyId String
  dependent    Task   @relation("dependent", fields: [dependentId], references: [id])
  dependency   Task   @relation("dependency", fields: [dependencyId], references: [id])

  @@unique([dependentId, dependencyId])
}

model CheckIn {
  id          String   @id @default(uuid())
  developerId String
  developer   Developer @relation(fields: [developerId], references: [id])
  date        DateTime @default(now())
  transcript  String?
  summary     String?
  mood        String?
  aiNotes     String?
  items       CheckInItem[]
}

model CheckInItem {
  id        String  @id @default(uuid())
  checkInId String
  checkIn   CheckIn @relation(fields: [checkInId], references: [id])
  taskId    String?
  task      Task?   @relation(fields: [taskId], references: [id])
  type      String
  content   String
  progress  Int?
}

model Blocker {
  id            String    @id @default(uuid())
  taskId        String?
  task          Task?     @relation(fields: [taskId], references: [id])
  reportedById  String
  reportedBy    Developer @relation("reportedBy", fields: [reportedById], references: [id])
  assignedToId  String?
  assignedTo    Developer? @relation("assignedTo", fields: [assignedToId], references: [id])
  description   String
  status        String    @default("open")
  priority      String    @default("high")
  notifiedAt    DateTime?
  resolvedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
